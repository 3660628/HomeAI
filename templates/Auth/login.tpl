<div id="loginDialog">
    <form id="loginDialogForm" class="form-horizontal row-fluid">
        <div class="control-group controls-row">
            <label for="username" class="control-label span4">Username</label>
            <div class="controls span8">
                <input id="username" name="username" type="text" placeholder="Enter username" class="span8" value="" />
                <span class="help-block"></span>
            </div>
        </div>
        <div class="control-group controls-row">
            <label for="password" class="control-label span4">Password</label>
            <div class="controls span8">
                <input id="password" name="password" type="password" placeholder="Enter password" class="span8" value="" />
                <span class="help-block"></span>
            </div>
        </div>
    </form>
</div>